      <% include ./partials/_header %>
   

    <h1>URL:</h1>
    <ul>
      <li>
        The shortURL:
        <b><a ref="/u/<%= shortURL %>"><%= shortURL %></a></b> 
        <form method="POST" action="/urls/<%= shortURL %>?_method=PUT">
          <input
            type="text"
            value="<%= longURL.longURL %>"
            name="longURL"
            style="width: 300px"
          />
          <button type="submit">Update</button>
        </form>
      </li>
    </ul>
